<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gr.aueb.softeng.project1806">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="OPA Telematics"
        android:roundIcon="@mipmap/ic_launcher"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.Home"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.adminOptions"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.adminLineOptions"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.adminStopOptions"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.alterLines"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.lineInfo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.addStop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.addLine"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.userOptions"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.userLineSearch"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.userStopSearch"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.userLineSearchResult"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.removeLine"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".view.removeStop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".view.alterStop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.addStopsToLine"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.stopInfo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.userStopSearchResult"
            android:screenOrientation="portrait" />
        <activity android:name=".view.userStopSearchByLocResult"></activity>
    </application>

</manifest>